<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <include layout="@layout/title_white_theme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_text_light7"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/tv_fee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_5dp"
            android:text="物业费：1333.5元"
            android:textColor="@color/black_text"
            android:textSize="@dimen/dimen_16dp" />

        <TextView
            android:id="@+id/tv_fee_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_5dp"
            android:text="房产：202文明家属院-1栋3单元-502室"
            android:textColor="@color/black_text"
            android:textSize="@dimen/dimen_16dp" />

        <TextView
            android:id="@+id/tv_fee_property_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_5dp"
            android:text="收款方：xxx物业管理公司"
            android:textColor="@color/black_text"
            android:textSize="@dimen/dimen_16dp" />
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_code"
            android:layout_width="174dp"
            android:layout_height="174dp" />
        />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/dimen_20dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:text="@string/weixin_title0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/gray_text"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10dp"
        android:background="@color/gray_back" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:text="@string/weixin_title1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black_text"
        android:textSize="@dimen/dimen_16dp" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp"
        android:text="@string/weixin_title4"
        android:textColor="@color/black_text"
        android:textSize="@dimen/font_size_16sp" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp"
        android:text="@string/weixin_title3"
        android:textColor="@color/black_text"
        android:textSize="@dimen/font_size_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_pay_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/green"
        android:paddingBottom="@dimen/dimen_14dp"
        android:paddingTop="@dimen/dimen_14dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16sp" />
    </LinearLayout>
</LinearLayout>