<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_white_theme" />

    <com.ldnet.utility.PagerSlidingTabStrip
        android:id="@+id/pager_sliding_tab_strip_publish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="@color/green_light"
        app:pstsIndicatorHeight="4dp"
        app:pstsScaleZoomMax="0.2"
        app:pstsShouldExpand="true"
        app:pstsTabPaddingLeftRight="12dp"
        app:pstsTextSelectedColor="@color/gray_deep"
        app:pstsUnderlineColor="@color/gray_light" />

    <com.ldnet.utility.NoScrollViewPager
        android:id="@+id/viewpager_my_publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>