<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/info_bar_header_layout"/>

    <com.ldnet.view.customview.PagerSlidingTabStrip
        android:id="@+id/pager_sliding_tab_strip_infobar"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="@color/green_light"
        app:pstsIndicatorHeight="4dp"
        app:pstsScaleZoomMax="0.2"
        app:pstsShouldExpand="true"
        app:pstsTabPaddingLeftRight="12dp"
        app:pstsTextSelectedColor="@color/gray_deep"
        app:pstsUnderlineColor="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/green"
        android:textSize="16sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_info_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>