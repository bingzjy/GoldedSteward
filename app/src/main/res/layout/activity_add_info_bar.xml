<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_white_theme"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_text_light3" />

    <EditText
        android:id="@+id/et_add_info_bar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15dp"
        android:hint="请输入标题（50字以内）"
        android:textColorHint="@color/gray_text_light5"
        android:textColor="@color/black_text"
        android:textSize="13sp"
        android:background="@null"
        android:lineSpacingExtra="5dp"
        android:maxLength="50"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_back"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        />

    <EditText
        android:id="@+id/et_add_info_bar_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="5"
        android:hint="用有趣的内容来描述一下吧"
        android:background="@null"
        android:textSize="13sp"
        android:layout_margin="@dimen/dimen_15dp"
        android:maxLines="5"
        android:lineSpacingExtra="5dp"
        android:textColorHint="@color/gray_text_light5"
        android:textColor="@color/black_text"
        android:gravity="top"
        android:maxLength="200"
        />
    <TextView
        android:id="@+id/tv_content_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0/200"
        android:textColor="@color/gray_text_light6"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_back"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_add_info_bar_picture_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            >

            <ImageButton
                android:id="@+id/btn_picture_add"
                android:layout_width="@dimen/dimen_64dp"
                android:layout_height="@dimen/dimen_64dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/picture_plus"
               />
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最多可添加5张照片,可长按删除"
            android:textSize="@dimen/font_size_12sp"
            android:textColor="@color/gray_text_light5"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/tv_add_image_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/5"
            android:textSize="@dimen/font_size_12sp"
            android:textColor="@color/gray_text_light5"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray_back"
        android:id="@+id/view" />

    <LinearLayout
        android:id="@+id/ll_add_info_bar_chose_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_15dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="类别"
            android:textColor="@color/black_text"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_add_info_bar_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray_text_light5"
                android:textColor="@color/black_text"
                android:hint="请选择商品类别"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_gray_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray_back"
        />
    <LinearLayout
        android:id="@+id/ll_add_info_bar_chose_type2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="发布类型"
            android:textColor="@color/black_text"
            android:textSize="14sp"
            />

       <RadioGroup
           android:id="@+id/radio_group_publish_info_bar"
           android:layout_width="0dp"
           android:layout_weight="0.8"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/dimen_10dp"
           android:layout_marginBottom="@dimen/dimen_10dp"
           >
           <RadioButton
               android:id="@+id/radio_button_privide"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"
               android:background="@drawable/back_selector_fill_green"
               android:checked="true"
               android:paddingTop="@dimen/dimen_5dp"
               android:paddingBottom="@dimen/dimen_5dp"
               android:paddingLeft="@dimen/dimen_20dp"
               android:paddingRight="@dimen/dimen_20dp"
               android:text="供应"
               android:textColor="@color/white"
               android:textSize="@dimen/font_size_14sp"
               />
           <RadioButton
               android:id="@+id/radio_button_need"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"
               android:background="@drawable/back_selector_fill_green"
               android:checked="false"
               android:paddingTop="@dimen/dimen_5dp"
               android:paddingBottom="@dimen/dimen_5dp"
               android:paddingLeft="@dimen/dimen_20dp"
               android:paddingRight="@dimen/dimen_20dp"
               android:layout_marginLeft="@dimen/dimen_15dp"
               android:text="需求"
               android:textColor="@color/gray_text"
               android:textSize="@dimen/font_size_14sp"
               />
       </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray_back"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_15dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textColor="@color/black_text"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/et_add_info_bar_telephone"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:textColorHint="@color/gray_text_light5"
            android:textColor="@color/black_text"
            android:hint="输入联系方式，方便他人与您联系"
            android:textSize="@dimen/font_size_14sp"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_back"
        />

</LinearLayout>
