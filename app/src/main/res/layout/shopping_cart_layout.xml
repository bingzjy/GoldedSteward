<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_price"
            android:background="@drawable/back_gradient_green"
            android:paddingBottom="13dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="13dp"
            android:text="立即结算"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_blank"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/view_blank"
            android:text="¥ 33.0"
            android:textColor="@color/red"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_other_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_toEndOf="@+id/view_blank"
            android:text="另需配送费 ¥2.5"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/font_size_12sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:paddingLeft="@dimen/dimen_15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:src="@drawable/ic_shopping_cart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/back_red_round"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </FrameLayout>

</FrameLayout>
