<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_weekend_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/activity_second_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >
        <EditText
            android:id="@+id/et_weekend_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:hint="@string/weekend_title"
            android:textColorHint="@color/gray_text_light5"
            android:textColor="@color/black_text"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:textSize="@dimen/font_size_14sp"
            android:maxLength="150"
            android:background="@null"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10dp"
            android:background="@color/gray_light_3"
            />

            <EditText
                android:id="@+id/et_weekend_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:hint="@string/weekend_address"
                android:background="@null"
                android:textSize="@dimen/font_size_14sp"
                android:textColorHint="@color/gray_text_light5"
                android:textColor="@color/black_text"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:maxLength="50"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10dp"
                android:background="@color/gray_light_3" />
            <EditText
                android:id="@+id/et_weekend_cost"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:numeric="integer"
                android:hint="@string/weekend_cost"
                android:inputType="numberDecimal"
                android:background="@null"
                android:textSize="@dimen/font_size_14sp"
                android:textColorHint="@color/gray_text_light5"
                android:textColor="@color/black_text"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10dp"
                android:background="@color/gray_light_3" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp">
        <EditText
            android:id="@+id/et_weekend_start_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/weekend_sdate"
            android:textSize="@dimen/font_size_14sp"
            android:background="@null"
            android:textColorHint="@color/gray_text_light5"
            android:textColor="@color/black_text"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp" />
        <EditText
            android:visibility="gone"
            android:id="@+id/et_weekend_start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/weekend_stime"
            android:textSize="@dimen/font_size_14sp"
            android:background="@null"
            android:textColorHint="@color/gray_text_light5"
            android:textColor="@color/black_text"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_4dp"
            android:paddingRight="@dimen/dimen_4dp"
            android:text="—"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_14sp"/>
        <EditText
            android:id="@+id/et_weekend_end_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/weekend_edate"
            android:textSize="@dimen/font_size_14sp"
            android:background="@null"
            android:textColorHint="@color/gray_text_light5"
            android:textColor="@color/black_text"
            android:gravity="right|center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp" />
        <EditText
            android:visibility="gone"
            android:id="@+id/et_weekend_end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/weekend_etime"
            android:textSize="@dimen/font_size_14sp"
            android:background="@null"
            android:textColorHint="@color/gray_text_light5"
            android:textColor="@color/black_text"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp" />
    </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10dp"
                android:background="@color/gray_light_3" />
    <EditText
            android:id="@+id/et_weekend_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:hint="@string/weekend_memo"
            android:lineSpacingExtra="@dimen/dimen_8dp"
            android:minHeight="@dimen/dimen_48dp"
            android:minLines="3"
        android:padding="@dimen/dimen_15dp"
            android:textSize="@dimen/dimen_14dp"
            android:maxLength="500"
            android:background="@null"
        android:textColorHint="@color/gray_text_light5"
        android:textColor="@color/black_text"
        />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@color/gray_light_3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_8dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weekend_images"
                android:textColor="@color/gray_text_light5"
                android:textSize="@dimen/font_size_14sp"/>
    </LinearLayout>
            <!--添加图片-->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_weekend_picture_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_4dp">

                    <ImageButton
                        android:id="@+id/btn_picture_add"
                        android:layout_width="@dimen/dimen_64dp"
                        android:layout_height="@dimen/dimen_64dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@mipmap/picture_plus" />
                </LinearLayout>
            </HorizontalScrollView>
        <Button
            android:id="@+id/btn_weekend_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@drawable/back_button_green"
            android:text="@string/weekend_publish"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16sp"
            android:layout_marginTop="@dimen/dimen_10dp"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
