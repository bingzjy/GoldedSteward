<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/activity_second_titlebar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:textColor="@color/black_text"
                android:text="@string/address_contract"
                />
        <EditText
            android:id="@+id/et_address_contract"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="16"
            android:textColor="@color/black_text"
            android:textColorHint="@color/gray_text_light5"
            android:textSize="@dimen/font_size_14sp"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />
            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_back"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:textColor="@color/black_text"
                android:text="@string/address_mobile" />

            <EditText
                android:id="@+id/et_address_mobile"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text_light5"
                android:textSize="@dimen/font_size_14sp"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_back"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:textColor="@color/black_text"
                android:text="@string/address_zipcode"
                />

            <EditText
                android:id="@+id/et_address_zipcode"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text_light5"
                android:textSize="@dimen/font_size_14sp"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_back"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp" />

        <LinearLayout
            android:id="@+id/ll_edit_address_check1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="省份:"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:id="@+id/textView19" />

            <Spinner
                android:id="@+id/sr_address_provinces"
                style="@style/spinner_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:animationCache="true"
                android:drawSelectorOnTop="true"
                android:textColorHint="@color/gray_text"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:scrollbars="none"
                android:background="@null"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_gray_right" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_back"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp" />

        <LinearLayout
            android:id="@+id/ll_edit_address_check2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="市区:"
                android:textColor="@color/black_text"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sr_address_cities"
                style="@style/spinner_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:animationCache="true"
                android:drawSelectorOnTop="true"
                android:textColorHint="@color/gray_text"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:background="@null"
                android:scrollbars="none"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_gray_right" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_back"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp" />
        <LinearLayout
            android:id="@+id/ll_edit_address_check3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="地区:"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:id="@+id/textView17" />

            <Spinner
                android:id="@+id/sr_address_areas"
                style="@style/spinner_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:animationCache="true"
                android:drawSelectorOnTop="true"
                android:textColorHint="@color/gray_text"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:background="@null"
                android:scrollbars="none"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_gray_right" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_back"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:textColor="@color/black_text"
                android:text="@string/address_details"
                />
        <EditText
            android:id="@+id/et_address_details"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/black_text"
            android:textColorHint="@color/gray_text_light5"
            android:textSize="@dimen/font_size_14sp"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:maxLength="200"
            />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_back"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:paddingLeft="@dimen/dimen_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="设置为默认收货地址"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_size_14sp" />

            <CheckBox
                android:id="@+id/chk_address_default"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_gravity="center|right"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/chk_custom"
                android:button="@null"
                />
        </LinearLayout>
    </LinearLayout>

        <Button
            android:id="@+id/btn_address_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@drawable/border_bottom_green"
            android:text="@string/button_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16sp" />
</LinearLayout>