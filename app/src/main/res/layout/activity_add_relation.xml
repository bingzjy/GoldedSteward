<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_relation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ldnet.activity.myhouserelation.AddRelationActivity">

    <include layout="@layout/title_white_theme"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_15dp"
                android:text="姓名"
                android:textColor="@color/gray_text" />

            <EditText
                android:id="@+id/et_add_relation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_border_line_green3"
                android:hint="@string/add_relation_input_name"
                android:maxLength="20"
                android:minHeight="35dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text_light12"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="@color/gray_text" />

            <EditText
                android:id="@+id/et_add_relation_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_border_line_green3"
                android:hint="@string/add_relation_input_tel"
                android:inputType="phone"
                android:maxLength="11"
                android:minHeight="35dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text_light12"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textColor="@color/gray_text" />

            <RadioGroup
                android:id="@+id/rg_relation_type"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_button_family"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/back_radio_check"
                    android:checked="false"
                    android:text="  家属"
                    android:textColor="@color/gray_text" />

                <RadioButton
                    android:id="@+id/radio_button_resident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:button="@drawable/back_radio_check"
                    android:checked="true"
                    android:text="  租户"
                    android:textColor="@color/gray_text" />
            </RadioGroup>

            <TextView
                android:id="@+id/ed_add_invite_visitor_car_no_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="房号"
                android:textColor="@color/gray_text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_border_line_green3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add_relation_comunity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLength="200"
                    android:minHeight="35dp"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:text="202文明家属院"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_size_14sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:src="@drawable/green_arrow_bottom" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add_relation_check_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:textColor="@color/gray_text" />

                <TextView
                    android:id="@+id/et_add_resident_date_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/back_border_line_green3"
                    android:gravity="center_vertical"
                    android:hint="@string/add_relation_input_date"
                    android:minHeight="35dp"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text_light12"
                    android:textSize="@dimen/font_size_14sp" />


                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:textColor="@color/gray_text" />

                <TextView
                    android:id="@+id/et_add_resident_date_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/back_border_line_green3"
                    android:gravity="center_vertical"
                    android:hint="@string/add_relation_input_date"
                    android:minHeight="35dp"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text_light12"
                    android:textSize="@dimen/font_size_14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_add_relation_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@drawable/back_button_fill_green2"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/add_relation_ok"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
