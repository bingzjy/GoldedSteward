<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.library.PullToRefreshScrollView
        android:id="@+id/access_visitor_pull_refresh"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/gray_light_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/null_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.58"
                android:gravity="center"
                android:padding="@dimen/dimen_24dp"
                android:text="暂时没有记录"
                android:textColor="@color/gray_deep_1"
                android:visibility="gone" />

            <com.ldnet.view.listview.MyListView
                android:id="@+id/lv_account_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.library.PullToRefreshScrollView>

        <Button
            android:id="@+id/btn_add_invite_visitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:paddingBottom="@dimen/dimen_12dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:text="+ 添加"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />
</LinearLayout>
