<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/sharp_rect_white"
              android:layout_margin="@dimen/dimen_20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:text="评价"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/black_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_socre"
            android:textColor="@color/black_text"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_10dp"
            android:text="评分"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <RatingBar
            android:id="@+id/room_ratingbar"
            style="@style/rating_style"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="1"
            android:rating="0"
           >
    </RatingBar>

    <EditText
        android:id="@+id/et_say"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_border_line_gray2"
        android:hint="有话要说..."
        android:textColor="@color/black_text"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:minLines="3"
        android:maxLines="5"
        android:gravity="top"
        android:textSize="@dimen/font_size_14sp"
        android:maxLength="100"
        android:scrollbars="none"
        />

    <LinearLayout
            android:layout_margin="@dimen/dimen_20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_36dp"
            android:background="@color/gray_back"
            android:orientation="horizontal">
        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sharp_rect"
                android:text="稍后评价"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14sp"/>
        <Button
                android:id="@+id/btn_confirm"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sharp_rect_green"
                android:text="确定评价"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14sp"/>
    </LinearLayout>
</LinearLayout>